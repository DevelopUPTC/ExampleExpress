<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./templates/header.ejs')%>
</head>
<body>
    <div class="container">
        <h1>Ejemplo de EJS</h1>
        <%if(data.size > 0 ){%>
            <table class="table">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Nombre</th>
                        <th>Valor</th>
                        <th>Vegetariano</th>
                    </tr>
                </thead>
                <tbody>
                    <%
                        for(const [key,value] of data ){%>
                            <tr>
                                <td><%=value.id%></td>
                                <td><%=value.name%></td>
                                <td><%=value.value%></td>
                                <td><%=value.vegetarian%></td>
                            </tr>
                        <%}%>
                </tbody>
            </table>
        <%}else{%>
            <h4>No hay Registros</h4>
        <%}%>
        <a href="/newDish" class="btn btn-primary">Agregar Registro</a>

    </div>

    <script src="js/bootstrap.min.js"></script>
</body>
</html>